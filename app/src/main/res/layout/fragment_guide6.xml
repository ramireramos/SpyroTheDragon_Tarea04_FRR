<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background_backward"
    tools:visibility="visible" >

    <ImageView
        android:id="@+id/spyro_the_dragon"
        android:layout_width="246dp"
        android:layout_height="357dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/spyro_the_dragon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_finish" />

    <ImageView
        android:id="@+id/speech_balloon_blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/speech_balloon_blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <TextView
        android:id="@+id/guide_resumen"
        android:layout_width="242dp"
        android:layout_height="190dp"
        android:layout_margin="8dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/text_resumen"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/speech_balloon_blank"
        app:layout_constraintStart_toStartOf="@id/speech_balloon_blank"
        app:layout_constraintTop_toTopOf="@id/speech_balloon_blank" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="147dp"
        android:layout_height="73dp"
        android:layout_marginTop="56dp"
        android:background="@color/purple"
        android:text="@string/finalizar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speech_balloon_blank" />

</androidx.constraintlayout.widget.ConstraintLayout>
